type Article{
  id: ID!
  text: String!
  draft: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
}

input NewArticle {
  text: String!
  userId: String!
}

input NewUser {
  name: String!
}

type Query {
  articles: [Article!]!
  users: [User!]!
}

type Mutation {
  createArticle(input: NewArticle!): Article!
  createUser(input: NewUser!): User!
}
